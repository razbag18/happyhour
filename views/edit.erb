<h1>edit</h1>

<form action ="/special/<%= @specials.id %>" method="post"> 
  <input type ="hidden" name="_method" value="put">

  <p>Drink special is on: 
    <input type="checkbox" name="monday" value="<%= @specials.monday%>"><label for="">Monday</label> 
    <input type="checkbox" name="tuesday" value="<%= @specials.tuesday%>"><label for="">Tuesday</label> 
    <input type="checkbox" name="wednesday" value="<%= @specials.wednesday%>"><label for="">Wednesday</label>
    <input type="checkbox" name="thursday" value="<%= @specials.thursday%>"><label for="">Thursday</label>  
    <input type="checkbox" name="friday" value="<%= @specials.friday%>"><label for="">Friday</label> 
    <input type="checkbox" name="saturday" value="<%= @specials.saturday%>"><label for="">Saturday</label> 
    <input type="checkbox" name="sunday" value="<%= @specials.sunday%>"><label for="">Sunday</label> 
  </p>
  <p>
    <label for ="">Venue Name:</label>
    <%# naming inputs same as our database %>
    <input type="text" name="venue_name" value="<%= @specials.venue_name%>">
  </p>
  <p>
    <label for ="">Address:</label>
    <input type="text" name="address" value="<%= @specials.address%>">
  </p>
  <p>
    <label for ="">Suburb:</label>
    <input type="text" name="suburb" value="<%= @specials.suburb%>">
  </p>
  <p> 
  <label for ="">Happy Hour Time:</label>
    <%# naming inputs same as our database %>
    <input type="text" name="happy_hour_time" value="<%= @specials.happy_hour_time%>">
  </p>
  <p>  
    <label for ="">Specials:</label>
    <input type="text" name="description" placeholder="$5 pints, $12 cocktails" required value="<%= @specials.description%>">
  </p>
  <p>
  <label for="url">Website</label>
    <input type="url" name="url" id="url" placeholder="https://happyhour.com" pattern="http.*" size="20" required value="<%= @specials.url%>"/>
  </p>
  <button>Submit</button>
</form>